<%- include('layout/header')%>
<header>
    <h1>Update Contact</h1>
</header>

<%- include('layout/nav') %>

<form id="contact-form" action="/update/<%= contact.name %>" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= contact.name %>" required>
    <label for="hp">Phone:</label>
    <input type="text" name="hp" value="<%= contact.hp %>" required>
    <label for="email">Email:</label>
    <input type="text" name="email" value="<%= contact.email %>" required>
    <button onclick="window.location.href='/updateform/<%contact.name%>'">Edit Contact</button>
</form>

<%- include('layout/footer') %>
<style>
    #contact-form {
        background-color: #f7f7f7;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        padding: 25px;
        margin: 0 auto;
        margin-top: 80px;
        max-width: 40%;
    }
    
    #contact-form label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333;
        
    }
    
    #contact-form input[type="text"],
    #contact-form input[type="email"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    
    #contact-form button {
        background-color: #35424a;
        font-size: 15px;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
    }
    
    #contact-form button:hover {
        background-color: #333;
    }
    
    </style>